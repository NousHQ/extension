{
  "manifest_version": 3,
  "name": "Nous",
  "version": "1.0.0",
  "permissions": ["activeTab", "storage", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content_script.js"]
    }
  ],
  "action" : {
    "default_title": "Nous",
    "default_popup": "popup/popup.html"
  }
}