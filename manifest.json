{
  "manifest_version": 3,
  "name": "nous",
  "version": "1.0.0",
  "host_permissions": ["https://nous-frontend.vercel.app/*"],
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "cookies"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content_script.js"]
    }
  ],
  "action" : {
    "default_title": "nous",
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "icons/logo-16.png",
    "32": "icons/logo-32.png",
    "48": "icons/logo-48.png",
    "128": "icons/logo-128.png"
  }
}